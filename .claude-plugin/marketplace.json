            "name": "evolutionary-biology-expert",
            "source": "./plugins/evolutionary-biology-expert",
            "description": "Comprehensive expert analysis system for evolutionary biology researchers. Reconstructs thought maps, analyzes academic networks, and evaluates research impact through advanced literature mining and network analysis techniques.",
            "version": "0.1.0",
            "author": {
                "name": "qingyu_ge",
                "url": "https://github.com/gqy20"
            },
            "homepage": "https://github.com/gqy20/cc_plugins",
            "repository": "https://github.com/gqy20/cc_plugins",
            "license": "MIT",
            "keywords": [
                "evolutionary-biology",
                "expert-analysis",
                "academic-network",
                "literature-review",
                "research-impact",
                "knowledge-mapping"
            ],
            "category": "research",
            "strict": false,
            "dependencies": [
                "article-mcp",
                "mediawiki-mcp-server",
                "sequentialthinking",
                "playwright"
            ],
            "commands": [
                "./commands/analyze-evolutionary-expert.md"
            ],
            "agents": [
                "./agents/evolutionary-biology-analyst.md"
            ],
            "skills": [
                "./skills/expert-network-mapping",
                "./skills/academic-literature-analysis",
                "./skills/search-term-optimization",
                "./skills/google-scholar-analysis",
                "./skills/temporal-dynamics-analysis",
                "./skills/critical-thinking-analysis",
                "./skills/context-aware-analysis"
            ],
            "features": [
                "thought-map-reconstruction",
                "network-centricity-analysis",
                "collaboration-mapping",
                "citation-network-analysis",
                "research-impact-evaluation",
                "multi-source-data-validation"
            ],
            "installation": {
                "mcp_servers": [
                    "claude mcp add article-mcp uvx article-mcp server",
                    "claude mcp add mediawiki-mcp-server npx @professional-wiki/mediawiki-mcp-server@latest",
                    "claude mcp add sequentialthinking npx -y @modelcontextprotocol/server-sequential-thinking@latest",
                    "claude mcp add playwright npx @playwright/mcp@latest --browser chrome --headless"
                ],
                "optional_env": ["EASYSCHOLAR_SECRET_KEY"]
            },
            "output": {
                "formats": [
                    "comprehensive-analysis-report",
                    "network-visualization-data",
                    "academic-metrics",
                    "citation-reports"
                ],
                "sections": [
                    "expert-identity-verification",
                    "core-theoretical-framework",
                    "research-timeline",
                    "knowledge-network-analysis",
                    "methodological-approaches",
                    "criticism-and-boundaries",
                    "real-world-applications",
                    "complete-references"
                ]
            }
        }
    ]
